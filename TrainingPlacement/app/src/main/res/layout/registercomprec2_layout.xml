<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:elevation="3dp"
        app:cardCornerRadius="@dimen/activity_horizontal_margin"
        app:cardElevation="20dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <com.github.siyamed.shapeimageview.CircularImageView
                android:id="@+id/logo1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:src="@drawable/icon1" />

            <TextView
                android:id="@+id/compyEligi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/regCompName"
                android:layout_gravity="bottom"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@+id/logo1"
                android:gravity="center"
                android:text="Company Eligibilty"
                android:textColor="#2d5986"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/regCompName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/logo1"
                android:gravity="left"
                android:text="Company Name"
                android:textColor="#2d5986"
                android:textSize="16dp"
                android:textStyle="normal" />

        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="83dp"
            android:id="@+id/eligbtn"
            android:background="@color/seagreen"
            android:text="Check EITHER You're ELIGIBLE OR NOT"
            android:textColor="@color/black"
            android:shadowColor="@color/black"
            android:elevation="20dp"
            android:outlineSpotShadowColor="@color/gray"
            android:outlineAmbientShadowColor="@color/black"/>
    </android.support.v7.widget.CardView>


</LinearLayout>

